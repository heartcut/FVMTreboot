
@for (int i = 0; i < 12; i++)
{
    if (i < player3hp)
    {
        <healthbubblealivep3>o</healthbubblealivep3>
    }
    else
    {
        <healthbubledead>o</healthbubledead>
    }
}

@code {

    public static int player3hp = 7;

    public void HealthMinus()
    {
        player3hp--;
        StateHasChanged();
    }
    public void HealthPlus()
    {
        player3hp++;
        StateHasChanged();
    }
}
