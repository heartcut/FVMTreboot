
@for (int i = 0; i < 12; i++)
{
    if (i<player1hp) {
        <healthbubblealivep1>o</healthbubblealivep1>
    }
    else
    {
        <healthbubledead>o</healthbubledead>
    }
}

@code {

    public static int player1hp = 7;

    public void HealthMinus()
    {
        player1hp--;
        StateHasChanged();
    }
    public void HealthPlus()
    {
        player1hp++;
        StateHasChanged();
    }
}
