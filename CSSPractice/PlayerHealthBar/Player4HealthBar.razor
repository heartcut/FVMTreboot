
@for (int i = 0; i < 12; i++)
{
    if (i < player4hp)
    {
        <healthbubblealivep4>o</healthbubblealivep4>
    }
    else
    {
        <healthbubledead>o</healthbubledead>
    }
}

@code {

    public static int player4hp = 7;

    public void HealthMinus()
    {
        player4hp--;
        StateHasChanged();
    }
    public void HealthPlus()
    {
        player4hp++;
        StateHasChanged();
    }
}
